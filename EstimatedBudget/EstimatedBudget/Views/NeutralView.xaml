<Page x:Class="EstimatedBudget.Views.NeutralView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EstimatedBudget.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="NeutralView">
    <Border Grid.Row="1"  UseLayoutRounding="True" Background="White" Height="500"  VerticalAlignment="Center">
        <Border.Effect>
            <DropShadowEffect Color="{StaticResource AccentDarkGray}"  BlurRadius="20" RenderingBias="Performance" ShadowDepth="0" />
        </Border.Effect>
        <Grid Background="White">
            <TextBlock Text="SUIVI BUDGETS" FontSize="100" Opacity="0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,30,30" FontWeight="Bold"/>
    </Grid>
    </Border>
</Page>
